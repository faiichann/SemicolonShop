<link rel="stylesheet" href="~/css/register.css" />
@{
    ViewData["Title"] = "Register Page";
}
<div class="hero" style="background-image:url(../lib/images/test.jpg)">
    <div class="container"><br /><br />
        <div class="form-box">
            <div class="row justify-content-center">
                <div class="col-2">
                    <br /><br />
                    <div class="button-box">
                        <div id="btn"></div>
                        <a style="text-decoration:none; border:0; outline:none; color:inherit;" asp-action="Login" type="button" class="toggle-btn">Login</a>
                        <a style="text-decoration:none; border:0; outline:none; color:inherit;" asp-action="Register" type="button" class="toggle-btn">Register</a>
                    </div><br />
                </div>
            </div>
            <div style="margin-top:5%;" class="row justify-content-center">
                <div class="col-12">
                    <form class="input-group" asp-action="Privacy">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div><br /><br />
                        <input type="text" class="input-field" placeholder="Username" />
                        <input style="margin-top:3%;" type="text" class="input-field" placeholder="Password" />
                        <input style="margin-top:3%;" type="text" class="input-field" placeholder="Confirm Password" />
                        <input style="margin-top:3%;" type="text" class="input-field" placeholder="Firstname" />
                        <input style="margin-top:3%;" type="text" class="input-field" placeholder="Lastname" />
                        <input style="margin-top:3%;" type="text" class="input-field" placeholder="Birthday" />
                        <input style="margin-top:3%;" type="text" class="input-field" placeholder="Email" />
                        <input style="margin-top:3%;" type="text" class="input-field" placeholder="Phone number" />
                        <input style="margin-top:3%;" type="text" class="input-field" placeholder="Address" />
                        <button style="margin-top:11%;" type="submit" class="submit-btn">Register</button>
                    </form>
                </div>
            </div>
        </div><br /><br />
    </div>
</div>